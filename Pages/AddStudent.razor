@page "/addstudent"

<EditForm Model="@Student" OnValidSubmit="HandleValidSubmit">
    <h3>Create Students</h3>
    <hr>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Nim</label>
        <div class="col-sm-10">
            <InputText id="StudentId" class="form-control" placeholder="Student Id" @bind-Value="Student.StudentId"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Nama Depan</label>
        <div class="col-sm-10">
            <InputText id="FirstName" class="form-control" placeholder="First Name" @bind-Value="Student.FirstName"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Nama Belakang</label>
        <div class="col-sm-10">
            <InputText id="LastName" class="form-control" placeholder="Last Name" @bind-Value="Student.LastName"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Tanggal Masuk</label>
        <div class="col-sm-10">
            <InputDate id="EnrollmentDate" class="form-control" placeholder="Enrollment Date" @bind-Value="Student.EnrollmentDate"/>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</EditForm>